{
  "private": true,
  "scripts": {
    "clean": "rm -rf dist/ && mkdir -p dist/",
    "page": "node scripts/page.js",
    "css": "node-sass src/css/main.scss dist/main.css --output-style compressed",
    "js": "browserify -t babelify src/js/main.js | uglifyjs -c -m > dist/main.js",
    "copy": "cp -r src/static/. dist/",
    "build": "npm-run-all clean -p page css js copy",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist/"
  },
  "dependencies": {
    "babel-runtime": "^6.18.0",
    "intersection-observer": "^0.1.1"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-latest": "^6.16.0",
    "babelify": "^7.3.0",
    "bluebird": "^3.4.6",
    "browserify": "^13.1.1",
    "easyimage": "^2.1.0",
    "gh-pages": "^0.11.0",
    "lodash.sortby": "^4.7.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "nightmare": "^2.8.1",
    "node-sass": "^3.11.3",
    "npm-run-all": "^3.1.1",
    "pug": "^2.0.0-beta6",
    "request": "^2.78.0",
    "rimraf": "^2.5.4",
    "uglify-js": "^2.7.4"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
