- var title = 'Website Gallery'

doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    meta(name="description", content= `${list.length} websites are collected by Yuhei Yasuda.`)
    link(rel="canonical", href="/")
    link(rel="stylesheet", href="/app.css")
    script(src="/app.js", defer)

  body
    header.page-header
      h1= title
      p
        = list.length
        |  websites are collected by 
        a(rel="author", href="https://yuheiy.com/") Yuhei Yasuda
        | .

    section
      ul.grid-list(role="directory")
        each item in list
          li
            a.js-lazy-loading(href= item.url, data-background-image= item.thumbnail)= item.title
