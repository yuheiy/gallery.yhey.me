doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Website Gallery
    link(rel='stylesheet', href='./style.css')

  body
    header
      h1.logo Website Gallery
      p.desc
        = items.length
        |  websites are collected by 
        a(href='https://yhey.me/') Yuhei Yasuda.

    ul.list
      each item in items
        li
          a(href= item.url, title= item.title)
            img(src= item.thumbnail, width='200', height='150')
            br
            = item.title
