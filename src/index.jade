doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Website Gallery
    link(rel='stylesheet', href='/css/style.css')
    script(src='/js/adjustGrid.js' async)
    script(src='/js/delayLoading.js' async)

  body
    header.header
      h1.title Website Gallery
      p.desc
        = items.length
        |  websites are collected by 
        a(href='https://yhey.me/') Yuhei Yasuda.

    ul.grid-list
      each item in items
        li(data-src= item.thumbnail)
          a.panel-link(href= item.url, title= item.title)
            p.title= item.title
